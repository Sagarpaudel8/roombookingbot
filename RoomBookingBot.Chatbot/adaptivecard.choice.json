{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "text": "Please select your appointment and confirm"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "chosenRoom",
      "style": "expanded",
      "isMultiSelect": false,
      "value": "1",
      "choices": $(choices),
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "OK"
    }
  ]
}
