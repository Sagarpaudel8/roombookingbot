{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Appointment Confirmation",
          "weight": "bolder",
          "size": "medium"
        },
        {
          "type": "ColumnSet",
          "columns": [

            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "$(room)",
                  "weight": "bolder",
                  "wrap": true
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Your meeting space is now reserved!",
          "wrap": true
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "From:",
              "value": "$(date)"
            },
            {
              "title": "To:",
              "value": "$(time)"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "View Appointment",
      "url": "$(attendees)"
    }
  ]
}